# Database
DATABASE_URL="postgresql://mosaaedak:mosaaedak_secret@localhost:5432/mosaaedak?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# JWT Secret (generate a secure random string for production)
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"

# Server
PORT=3000
NODE_ENV="development"

# n8n Webhook URL (your self-hosted instance)
N8N_WEBHOOK_URL="https://n8n.mosaaedak.com/webhook"

# File Upload
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE=5242880

# Billing Configuration
COST_PER_MESSAGE=0.03
MONTHLY_SUBSCRIPTION_FEE=29.00
LOW_BALANCE_THRESHOLD=1.00

# Twilio (Master Account - for sending service messages)
TWILIO_ACCOUNT_SID=""
TWILIO_AUTH_TOKEN=""
TWILIO_PHONE_NUMBER=""

# Encryption Key for storing tenant credentials (32 bytes hex)
ENCRYPTION_KEY="your-32-byte-hex-encryption-key-here"
