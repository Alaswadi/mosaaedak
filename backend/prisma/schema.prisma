// Mosaaedak SaaS Platform - Database Schema
// PostgreSQL with Prisma ORM

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ===========================================
// USERS (Unified - Both Admins and Customers)
// ===========================================
model User {
  id           String   @id @default(uuid())
  email        String   @unique
  passwordHash String
  role         UserRole @default(CUSTOMER)
  
  // Profile
  name         String
  phone        String?
  avatarUrl    String?
  
  // Customer-specific fields (null for admins)
  tenant       Tenant?  @relation(fields: [tenantId], references: [id])
  tenantId     String?  @unique
  
  // Timestamps
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  lastLoginAt  DateTime?
  
  // Admin actions
  reviewedPayments PaymentTransaction[] @relation("ReviewedBy")
}

enum UserRole {
  ADMIN
  CUSTOMER
}

// ===========================================
// TENANTS (Business Accounts)
// ===========================================
model Tenant {
  id              String       @id @default(uuid())
  businessName    String
  
  // Wallet
  walletBalance   Decimal      @default(0) @db.Decimal(10, 4)
  
  // Twilio Credentials (encrypted at rest)
  twilioSid       String?
  twilioToken     String?      // Encrypted
  twilioPhone     String?      @unique
  
  // Bot Configuration
  systemPrompt    String?      @db.Text
  aiModel         String       @default("gpt-3.5-turbo")
  facebookPrompt  String?      @db.Text
  
  // Status & Billing
  status          TenantStatus @default(ACTIVE)
  monthlyFee      Decimal      @default(29) @db.Decimal(10, 2)
  nextBillingDate DateTime?
  
  // Relations
  user            User?
  transactions    PaymentTransaction[]
  usageLogs       UsageLog[]
  
  // Timestamps
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
}

enum TenantStatus {
  ACTIVE
  PAUSED
  BANNED
}

// ===========================================
// PAYMENT TRANSACTIONS (Money In)
// ===========================================
model PaymentTransaction {
  id          String            @id @default(uuid())
  
  // Tenant relation
  tenant      Tenant            @relation(fields: [tenantId], references: [id])
  tenantId    String
  
  // Transaction details
  amount      Decimal           @db.Decimal(10, 2)
  method      PaymentMethod
  proofPath   String?           // Local file path to uploaded proof
  status      TransactionStatus @default(PENDING)
  
  // Admin review
  reviewedBy     User?          @relation("ReviewedBy", fields: [reviewedById], references: [id])
  reviewedById   String?
  reviewedAt     DateTime?
  rejectionNotes String?
  
  // Timestamps
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
}

enum PaymentMethod {
  KURIMI
  USDT
  CASH
}

enum TransactionStatus {
  PENDING
  APPROVED
  REJECTED
}

// ===========================================
// USAGE LOGS (Money Out - Per Message)
// ===========================================
model UsageLog {
  id          String           @id @default(uuid())
  
  // Tenant relation
  tenant      Tenant           @relation(fields: [tenantId], references: [id])
  tenantId    String
  
  // Message details
  direction   MessageDirection
  content     String           @db.Text
  cost        Decimal          @db.Decimal(10, 4)
  
  // Metadata
  fromPhone   String?
  toPhone     String?
  messageId   String?          // External message ID (Twilio)
  
  // Timestamp
  createdAt   DateTime         @default(now())
  
  @@index([tenantId, createdAt])
}

enum MessageDirection {
  INBOUND
  OUTBOUND
}

// ===========================================
// SYSTEM SETTINGS
// ===========================================
model SystemSetting {
  key       String   @id
  value     String
  updatedAt DateTime @updatedAt
}
